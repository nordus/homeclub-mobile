ion-side-menus
  ion-side-menu-content
    ion-nav-bar.bar-calm
      ion-nav-buttons(side='left')
        button(menu-toggle='left').button.button-icon.icon.ion-navicon
    ion-nav-view(name='mainContent')

  ion-side-menu(side='left', expose-aside-when="large")
    ion-header-bar.bar-calm
    ion-content.has-header
      ion-list
        a(nav-clear='', menu-close='', ui-sref='app.dash').item.item-icon-left
          i.icon.ion-home
          |  Dashboard
        a(nav-clear='', menu-close='', ui-sref='app.sensorSetup').item.item-icon-left
          i.icon.ion-gear-a
          |  Sensor Setup
        a(ng-click='logout()').item.item-icon-left
          i.icon.ion-log-out
          |  Logout